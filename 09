package distanciaentre2pontos; 

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
      double x1, y1, x2, y2, distancia;


        System.out.print("Digite x1: ");
        x1 = entrada.nextDouble();

        System.out.print("Digite y1: ");
        y1 = entrada.nextDouble();++++++

        System.out.print("Digite x2: ");
        x2 = entrada.nextDouble();

        System.out.print("Digite y2: ");
        y2 = entrada.nextDouble();


        distancia = Math.sqrt(Math.pow(x2 - x1, 2) + Math.pow(y2 - y1, 2));


        System.out.printf("A distância euclidiana entre os pontos é: %.2f\n", distancia);

        entrada.close();
    }
}


//questão 8
package nome;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);

        double n1, n2, n3;
        double media, somaAbs, maiorDif;

        System.out.print("Digite o primeiro número: ");
        n1 = entrada.nextDouble();

        System.out.print("Digite o segundo número: ");
        n2 = entrada.nextDouble();

        System.out.print("Digite o terceiro número: ");
        n3 = entrada.nextDouble();

        media = (n1 + n2 + n3) / 3;
        somaAbs = Math.abs(n1) + Math.abs(n2) + Math.abs(n3);

        double dif1 = Math.abs(n1 - n2);
        double dif2 = Math.abs(n1 - n3);
        double dif3 = Math.abs(n2 - n3);

        maiorDif = Math.max(dif1, Math.max(dif2, dif3));

        System.out.printf("\nMédia aritmética: %.2f\n", media);
        System.out.printf("Soma dos valores absolutos: %.2f\n", somaAbs);
        System.out.printf("Maior diferença (valor absoluto): %.2f\n", maiorDif);

        entrada.close();
    }
}
 // questão 9
package equacaode2grau;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);

        double a, b, c;
        double delta, x1, x2;

        System.out.print("Digite o valor de a: ");
        a = entrada.nextDouble();
        System.out.print("Digite o valor de b: ");
        b = entrada.nextDouble();
        System.out.print("Digite o valor de c: ");
        c = entrada.nextDouble();

        if (a == 0) {
            System.out.println("Não é uma equação do segundo grau (a não pode ser 0).");
        } else {
            delta = Math.pow(b, 2) - 4 * a * c;
            if (delta < 0) {
                System.out.println("A equação não possui raízes reais.");
            } else {
                x1 = (-b + Math.sqrt(delta)) / (2 * a);
                x2 = (-b - Math.sqrt(delta)) / (2 * a);
                System.out.printf("x1 = %.2f\n", x1);
                System.out.printf("x2 = %.2f\n", x2);
            }
        }
        entrada.close();
    }
}
//Questão 10 
package algoritmodetemperatura ;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);

        double fahrenheit, celsius;

        System.out.print("Digite a temperatura em Fahrenheit: ");
        fahrenheit = entrada.nextDouble();

        celsius = (5.0 / 9.0) * (fahrenheit - 32);

        System.out.printf("Temperatura em Fahrenheit: %.2f°F\n", fahrenheit);
        System.out.printf("Temperatura em Celsius: %.2f°C\n", celsius);
        entrada.close();
    }
}
