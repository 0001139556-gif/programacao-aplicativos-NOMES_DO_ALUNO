//questão1 
package leituradoRaio;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);

        double raio, area, circunferencia;
        System.out.print("Digite o raio do círculo: ");
        raio = entrada.nextDouble();

        area = Math.PI * Math.pow(raio, 2);
        circunferencia = 2 * Math.PI * raio;

        System.out.printf("Área do círculo: %.2f\n", area);
        System.out.printf("Circunferência do círculo: %.2f\n", circunferencia);

        entrada.close();
    }
}


//questão 2
public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        
         double peso, altura, imc;
         
         System.out.print("Digite o peso (em kg): ");
        peso = entrada.nextDouble();

        System.out.print("Digite a altura (em metros): ");
        altura = entrada.nextDouble();
        
        imc = peso / Math.pow(altura, 2);
        
          System.out.printf("Seu IMC é: %.2f\n", imc);

        entrada.close();
    }
}
//questão 3 
package nome;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);

        double cateto1, cateto2, hipotenusa;

        System.out.print("Digite o comprimento do primeiro cateto: ");
        cateto1 = entrada.nextDouble();

        System.out.print("Digite o comprimento do segundo cateto: ");
        cateto2 = entrada.nextDouble();

        hipotenusa = Math.sqrt(Math.pow(cateto1, 2) + Math.pow(cateto2, 2));

        System.out.printf("A hipotenusa é: %.2f\n", hipotenusa);

        entrada.close();
    }
}

