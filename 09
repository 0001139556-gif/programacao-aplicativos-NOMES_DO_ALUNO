//questão 5
  public class Main {
    public static void main(String[] args) {

        Scanner entrada = new Scanner(System.in);

        double n1, n2, n3;
        double media, soma, maiorDif;
        System.out.print("Digite o primeiro número: ");
        n1 = entrada.nextDouble();
        System.out.print("Digite o segundo número: ");
        n2 = entrada.nextDouble();
        System.out.print("Digite o terceiro número: ");
        n3 = entrada.nextDouble();

        soma = n1 + n2 + n3;
        media = soma / 3;


        double dif1 = Math.abs(n1 - n2);
        double dif2 = Math.abs(n1 - n3);
        double dif3 = Math.abs(n2 - n3);

        maiorDif = Math.max(dif1, Math.max(dif2, dif3));


        System.out.println("Soma: " + soma);
        System.out.println("Média: " + media);
        System.out.println("Maior diferença: " + maiorDif);

        entrada.close();
    }
}
package nome;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);

        int n;
        int valor, soma = 0, menor = Integer.MAX_VALUE, maior = Integer.MIN_VALUE;

        System.out.print("Digite a quantidade de rolagens: ");
        n = entrada.nextInt();

        if (n <= 0) {
            System.out.println("A quantidade de rolagens deve ser maior que 0.");
        } else {
            for (int i = 1; i <= n; i++) {
                System.out.print("Digite o resultado da rolagem " + i + " (entre 1 e 6): ");
                valor = entrada.nextInt();

                while (valor < 1 || valor > 6) {
                    System.out.print("Valor inválido! Digite um número entre 1 e 6: ");
                    valor = entrada.nextInt();
                }

                soma += valor;

                if (valor < menor) {
                    menor = valor;
                }
                if (valor > maior) {
                    maior = valor;
                }
            }

            double media = (double) soma / n;

            System.out.printf("\nMédia dos resultados: %.2f\n", media);
            System.out.println("Menor valor obtido: " + menor);
            System.out.println("Maior valor obtido: " + maior);
        }

        entrada.close();
    }
}




